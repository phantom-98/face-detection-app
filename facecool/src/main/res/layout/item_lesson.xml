<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/itemBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lesson_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/titleTextColor" />

        <TextView
            android:id="@+id/tv_lesson_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/titleTextColor" />

        <TextView
            android:id="@+id/tv_lesson_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/titleTextColor" />

        <TextView
            android:id="@+id/tv_lesson_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/titleTextColor" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/radius_border_green"
            android:fontFamily="@font/inter_light"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/lesson_select_dialog_start_button"
            android:textColor="@color/cameraGreenBackgroundColor"
            android:textSize="10sp"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.cardview.widget.CardView>