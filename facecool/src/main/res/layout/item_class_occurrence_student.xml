<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/itemBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_student"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tv_class_occurrence_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_class_occurrence_student_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_manual_attendance"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:foregroundGravity="fill"
            android:padding="0dp"
            android:background="@color/manual_present"
            android:textColor="@color/white"
            android:text="@string/class_report_manual_present" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
