<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/itemBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/iv_student_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_student_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <Button
            android:id="@+id/iv_student_remove"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:background="@drawable/radius_border_red"
            android:fontFamily="@font/inter_light"
            android:gravity="center"
            android:text="@string/remove"
            android:textColor="@color/splashScreenBackgroundColor"
            android:textSize="11sp"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
