<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/label"
        />
        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#132558"
            android:text="50"
            android:layout_toEndOf="@id/label"
            android:layout_marginLeft="15sp"
            />
        <TextView
            android:id="@+id/valueUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/percent"
            android:layout_toRightOf="@id/value"
            android:layout_marginLeft="5sp"
            />

    </RelativeLayout>


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:progressBackgroundTint="#4068D8"

        android:progressTint="#0A0A8B"
        android:scrollbarThumbHorizontal="@drawable/circle_blue_btn"

        android:thumbTint="#132558" />

</LinearLayout>